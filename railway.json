{
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "backend/Dockerfile",
        "context": "backend"
    },
    "deploy": {
        "startCommand": "yarn start"
    },
    "services": [
        {
            "name": "frontend",
            "build": {
                "builder": "DOCKERFILE",
                "dockerfilePath": "frontend/Dockerfile",
                "context": "frontend"
            },
            "deploy": {
                "startCommand": "nginx -g 'daemon off;'"
            }
        },
        {
            "name": "mongo",
            "image": "mongo",
            "volumes": [
                {
                    "type": "persistent",
                    "mountPath": "/data/db",
                    "name": "mongo-data"
                }
            ]
        }
    ]
}
